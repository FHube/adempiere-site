{
  "name": "blog",
  "version": "1.0.0",
  "description": "个人博客",
  "scripts": {
    "dev:vite": "vuepress-vite dev src",
    "dev:webpack": "vuepress-webpack dev src",
    "dev-clean:vite": "vuepress-vite dev src --clean-cache",
    "dev-clean:webpack": "vuepress-webpack dev src --clean-cache",
    "build:vite": "vuepress-vite build src",
    "build:webpack": "vuepress-webpack build src",
    "build-super:vite": "node --max_old_space_size=8192 ./node_modules/vuepress-vite/lib/index.js build src",
    "build-super:webpack": "node --max_old_space_size=8192 ./node_modules/vuepress-webpack/lib/index.js build src",
    "debug-dev:vite": "cross-env DEBUG=vuepress* vuepress-vite dev src",
    "debug-build:vite": "cross-env DEBUG=vuepress* vuepress-vite build src",
    "debug-dev:webpack": "cross-env DEBUG=vuepress* vuepress-webpack dev src",
    "debug-build:webpack": "cross-env DEBUG=vuepress* vuepress-webpack build src",
    "lint": "prettier --check --write .",
    "lint:check": "prettier --check .",
    "lint-md": "markdownlint **/*.md --ignore node_modules --fix",
    "lint-md:check": "markdownlint **/*.md --ignore node_modules",
    "lint-md:style": "remark --quiet .",
    "lint-md:wording": "textlint ./src/**/*.md",
    "lint-md:wording:fix": "textlint ./src/**/*.md --fix",
    "comsol:get-words": "node scripts/comsol/get-words.js",
    "test": "echo \"Warning: no test specified\" && exit 0"
  },
  "author": "Mr.Hope",
  "license": "MIT",
  "keywords": [
    "vuepress",
    "personal-blog"
  ],
  "dependencies": {
    "@vuepress/cli": "2.0.0-beta.43",
    "@vuepress/client": "2.0.0-beta.43",
    "@vuepress/plugin-docsearch": "2.0.0-beta.43",
    "sass-loader": "^12.6.0",
    "vue": "3.2.33",
    "vuepress-theme-hope": "2.0.0-beta.51",
    "vuepress-vite": "2.0.0-beta.43",
    "vuepress-webpack": "2.0.0-beta.43"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "markdownlint-cli": "0.31.1",
    "prettier": "2.6.2"
  }
}
